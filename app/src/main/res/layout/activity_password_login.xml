<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/main_logo"
        android:layout_width="126dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:background="@drawable/logo" />


    <TextView
        android:id="@+id/password_login_title"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:layout_below="@+id/main_logo"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="密码登录"
        android:textSize="20sp"
        android:textColor="#FF002A"/>

    <LinearLayout
        android:id="@+id/password_login_account_designer"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_below="@id/password_login_title"
        android:background="@drawable/rounded_login">


    <EditText
        android:id="@+id/password_login_account"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textAllCaps="false"
        android:textColorHint="#6c6c6c"
        android:textSize="16sp"
        android:maxLines="1"
        android:hint="请输入用户名"
        android:background="@drawable/rounded_text"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_login_password_designer"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_login_account_designer"
        android:background="@drawable/rounded_login"
        >
    <EditText
        android:id="@+id/password_login_password"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textAllCaps="false"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="#6c6c6c"
        android:textSize="16sp"
        android:textColorHint="#6c6c6c"
        android:hint="请输入密码"
        android:background="@drawable/rounded_text"
        />
    </LinearLayout>


    <Button
        android:id="@+id/password_login_btn"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_below="@+id/password_login_password_designer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:stateListAnimator="@null"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/password_login_forget_password"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@+id/password_login_btn"
        android:layout_alignRight="@id/password_login_btn"
        android:text="忘记密码"
        android:gravity="right"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="#00000000"
        android:layout_marginTop="12dp"
        />
    <Button
        android:id="@+id/password_login_return"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@+id/password_login_btn"
        android:layout_alignLeft="@id/password_login_btn"
        android:text="邮箱登陆"
        android:gravity="right"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="#00000000"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/email_login_other_login"
        android:layout_width="72dp"
        android:layout_height="17dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password_login_btn"
        android:layout_marginTop="76dp"
        android:textSize="12sp"
        android:text="其它登录方式"
    />


    <LinearLayout
        android:id="@+id/email_login_other_login_ways"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/email_login_other_login"
        android:layout_marginTop="18dp">

        <ImageButton
            android:id="@+id/email_login_wechat_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/wechat"
            />

        <ImageButton
            android:id="@+id/email_login_alipay_login"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@drawable/alipay"
            />
    </LinearLayout>
</RelativeLayout>