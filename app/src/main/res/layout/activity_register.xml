<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/main_logo"
        android:layout_width="126dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/register_title"
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:layout_below="@+id/main_logo"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:textSize="20sp"
        android:textColor="#FF002A"/>

    <LinearLayout
        android:id="@+id/register_account_designer"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_below="@id/register_title"
        android:background="@drawable/rounded_login">

        <EditText
            android:id="@+id/register_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:textAllCaps="false"
            android:textColorHint="#6c6c6c"
            android:textSize="16sp"
            android:maxLines="1"
            android:hint="请填写用户名"
            android:background="@drawable/rounded_text"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/resgister_email_designer"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_account_designer"
        android:background="@drawable/rounded_login"
        >

        <EditText
            android:id="@+id/register_bound_email"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textAllCaps="false"
            android:maxLines="1"
            android:hint="请输入邮箱"
            android:textColor="#6c6c6c"
            android:textSize="16sp"
            android:textColorHint="#6c6c6c"
            android:background="@drawable/rounded_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_password_designer"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resgister_email_designer"
        android:background="@drawable/rounded_login"
        >

        <EditText
            android:id="@+id/register_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textAllCaps="false"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="请填写密码"
            android:textColor="#6c6c6c"
            android:textSize="16sp"
            android:textColorHint="#6c6c6c"
            android:background="@drawable/rounded_text" />
    </LinearLayout>



    <Button
        android:id="@+id/register"
        android:layout_below="@+id/register_password_designer"
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:stateListAnimator="@null"
        android:background="@drawable/rounded_button2"/>



    <Button
        android:id="@+id/register_jump_to_login"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register"

        android:text="返回登陆"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="#00000000"
        android:layout_marginTop="18dp"


        />

</RelativeLayout>