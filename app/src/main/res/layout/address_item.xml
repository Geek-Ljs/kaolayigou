<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/address_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/address_tips"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="18dp"
            android:text="J"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/address_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="18dp"
            android:text="收件人："
            android:textColor="#222222"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/address_tips"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/submit_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="18dp"
            android:text="Jason"
            android:textColor="#222222"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/address_people"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/submit_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="8dp"
            android:text="123123123"
            android:textColor="#6c6c6c"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/submit_address_name"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/address_adr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginBottom="18dp"
            android:text="地址："
            android:textColor="#222222"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/address_tips"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/submit_address_addr"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="18dp"
            android:text="123123123asdad"
            android:textColor="#222222"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/address_adr"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>