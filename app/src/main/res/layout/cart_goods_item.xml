<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="#FFFFFF">

    <CheckBox
        android:id="@+id/goods_checkbox"
        style="@style/CustomCheckBoxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/goods_image"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/goods_checkbox"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goods_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="14dp"
        app:layout_constraintWidth_default="wrap"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="asdadadadasdasdadadabbbnnnnnnnnbbbbb"
        android:textColor="#222222"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/goods_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/goods_name_text"
        app:layout_constraintLeft_toRightOf="@id/goods_image"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_button3"
        >

        <Button
            android:id="@+id/goods_type_btn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="aasdasdadad"
            android:textColor="#6c6c6c"
            android:textSize="10sp"
            android:gravity="center"
            android:background="#00000000"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_down"/>
    </LinearLayout>

        <TextView
            android:id="@+id/cart_text_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="16dp"
            android:text="ï¿¥"
            android:textColor="#FF002A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/goods_image"
            />
        <TextView
            android:id="@+id/cart_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="14dp"
            android:text="199"
            android:textColor="#FF002A"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cart_text_rmb"
            />
        <ImageButton
            android:id="@+id/goods_add_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_add"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/goods_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="#222222"
            android:textSize="12sp"
            android:layout_marginRight="8dp"

            app:layout_constraintRight_toLeftOf="@id/goods_add_btn"

            app:layout_constraintTop_toTopOf="@id/goods_add_btn"
            app:layout_constraintBottom_toBottomOf="@+id/goods_add_btn"/>
    <ImageButton
        android:id="@+id/goods_reduce_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_reduce"
        app:layout_constraintRight_toLeftOf="@id/goods_num_text"
        app:layout_constraintTop_toTopOf="@id/goods_num_text"
        app:layout_constraintBottom_toBottomOf="@+id/goods_num_text"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

