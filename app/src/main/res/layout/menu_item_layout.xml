<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/classification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-33dp">


    <ImageButton
        android:id="@+id/icon_a"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_a"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/icon_b"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/icon_a"
        app:layout_constraintLeft_toLeftOf="@id/icon_a"
        app:layout_constraintRight_toRightOf="@id/icon_a"
        android:text="数码家电"
        />

    <ImageButton
        android:id="@+id/icon_b"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:background="@drawable/ic_b"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/icon_a"
        app:layout_constraintRight_toLeftOf="@id/icon_c"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/icon_b"
        app:layout_constraintLeft_toLeftOf="@id/icon_b"
        app:layout_constraintRight_toRightOf="@id/icon_b"
        android:text="服饰鞋包"
        />

    <ImageButton
        android:id="@+id/icon_c"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:background="@drawable/ic_c"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/icon_b"
        app:layout_constraintRight_toLeftOf="@id/icon_d"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/icon_c"
        app:layout_constraintLeft_toLeftOf="@id/icon_c"
        app:layout_constraintRight_toRightOf="@id/icon_c"
        android:text="美食酒水"
        />

    <ImageButton
        android:id="@+id/icon_d"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:background="@drawable/ic_d"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/icon_c"
        app:layout_constraintRight_toLeftOf="@id/icon_e"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/icon_d"
        app:layout_constraintLeft_toLeftOf="@id/icon_d"
        app:layout_constraintRight_toRightOf="@id/icon_d"
        android:text="个护清洁"
        />

    <ImageButton
        android:id="@+id/icon_e"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:background="@drawable/ic_e"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/icon_d"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/icon_e"
        app:layout_constraintLeft_toLeftOf="@id/icon_e"
        app:layout_constraintRight_toRightOf="@id/icon_e"
        android:text="生鲜超市"
        />


    <ImageButton
        android:id="@+id/icon_f"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_f"
        app:layout_constraintTop_toBottomOf="@id/icon_a"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="24dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/icon_f"
        app:layout_constraintLeft_toLeftOf="@id/icon_f"
        app:layout_constraintRight_toRightOf="@id/icon_f"
        android:text="母婴"
        />

    <ImageButton
        android:id="@+id/icon_g"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_g"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/icon_b"
        app:layout_constraintLeft_toRightOf="@id/icon_a"
        app:layout_constraintLeft_toLeftOf="@id/icon_b"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/icon_g"
        app:layout_constraintLeft_toLeftOf="@id/icon_g"
        app:layout_constraintRight_toRightOf="@id/icon_g"
        android:text="家具生活"
        />

    <ImageButton
        android:id="@+id/icon_h"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_h"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/icon_c"
        app:layout_constraintLeft_toRightOf="@id/icon_b"
        app:layout_constraintLeft_toLeftOf="@id/icon_c"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/icon_h"
        app:layout_constraintLeft_toLeftOf="@id/icon_h"
        app:layout_constraintRight_toRightOf="@id/icon_h"
        android:text="全球优选"
        />

    <ImageButton
        android:id="@+id/icon_i"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_i"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/icon_d"

        app:layout_constraintLeft_toLeftOf="@id/icon_d"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#222222"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/icon_i"
        app:layout_constraintLeft_toLeftOf="@id/icon_i"
        app:layout_constraintRight_toRightOf="@id/icon_i"
        android:text="美妆"
        />
    <ImageButton
        android:id="@+id/icon_j"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_j"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/icon_e"
        app:layout_constraintLeft_toRightOf="@id/icon_i"
        app:layout_constraintLeft_toLeftOf="@id/icon_e"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222222"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/icon_j"
        app:layout_constraintLeft_toLeftOf="@id/icon_j"
        app:layout_constraintRight_toRightOf="@id/icon_j"
        android:text="分类"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
