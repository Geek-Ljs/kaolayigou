<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_recommend">

    <fragment
        android:id="@+id/navigation_recommend"
        android:name="com.shoppingmail.ui.fragment.recommend.RecommendFragment"
        android:label="@string/title_recommend"
        tools:layout="@layout/fragment_recommend" />

    <fragment
        android:id="@+id/navigation_message"
        android:name="com.shoppingmail.ui.fragment.message.MessageFragment"
        android:label="@string/title_message"
        tools:layout="@layout/fragment_message"/>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.shoppingmail.ui.fragment.cart.CartFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_cart"/>

    <fragment
        android:id="@+id/navigation_myself"
        android:name="com.shoppingmail.ui.fragment.myself.MyselfFragment"
        android:label="@string/title_myself"
        tools:layout="@layout/fragment_myself"/>

</navigation>